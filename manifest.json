{
  "manifest_version": 2,
  "name": "StackNotes",
  "version": "1",
  "permissions": ["clipboardRead", "clipboardWrite"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
